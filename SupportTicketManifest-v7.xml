<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>f8c1f9c8-693b-4f9e-a10c-15a0b9a35e07</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Kiener + Wittlin AG</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  
  <SupportUrl DefaultValue="https://github.com/Hotlinekw/addin-icons" />

  <DisplayName DefaultValue="Support Ticket Button" />
  <Description DefaultValue="Erstellt eine neue E-Mail an support@kiener-wittlin.ch." />

  <IconUrl DefaultValue="https://hotlinekw.github.io/addin-icons/icon32.png" />
  <HighResolutionIconUrl DefaultValue="https://hotlinekw.github.io/addin-icons/icon80.png" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <Permissions>ReadItem</Permissions>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
    xsi:type="VersionOverrides"
    Version="1.0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          
          <FunctionFile resid="residFunctionFileUrl" />

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadSupportGroup">
                <Label resid="residSupportGroupLabel" />
                <Icon>
                  <bt:Image resid="residIcon16" />
                  <bt:Image resid="residIcon32" />
                  <bt:Image resid="residIcon80" />
                </Icon>
                <Control xsi:type="Button" id="msgReadSupportButton">
                  <Label resid="residSupportButtonLabel" />
                  <Supertip>
                    <Title resid="residSupportButtonLabel" />
                    <Description resid="residSupportButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image resid="residIcon16" />
                    <bt:Image resid="residIcon32" />
                    <bt:Image resid="residIcon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>createSupportTicket</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeSupportGroup">
                <Label resid="residSupportGroupLabel" />
                <Icon>
                  <bt:Image resid="residIcon16" />
                  <bt:Image resid="residIcon32" />
                  <bt:Image resid="residIcon80" />
                </Icon>
                <Control xsi:type="Button" id="msgComposeSupportButton">
                  <Label resid="residSupportButtonLabel" />
                  <Supertip>
                    <Title resid="residSupportButtonLabel" />
                    <Description resid="residSupportButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image resid="residIcon16" />
                    <bt:Image resid="residIcon32" />
                    <bt:Image resid="residIcon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>createSupportTicket</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="residIcon16"
                  DefaultValue="https://hotlinekw.github.io/addin-icons/icon16.png" />
        <bt:Image id="residIcon32"
                  DefaultValue="https://hotlinekw.github.io/addin-icons/icon32.png" />
        <bt:Image id="residIcon80"
                  DefaultValue="https://hotlinekw.github.io/addin-icons/icon80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="residFunctionFileUrl"
                DefaultValue="https://hotlinekw.github.io/addin-icons/support-logic-v5.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="residSupportGroupLabel" DefaultValue="Support" />
        <bt:String id="residSupportButtonLabel" DefaultValue="Ticket erstellen" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="residSupportButtonTooltip"
                   DefaultValue="Erstellt eine neue E-Mail an support@kiener-wittlin.ch." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>