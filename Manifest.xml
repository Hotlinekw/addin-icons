<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Basisdaten -->
  <Id>4e8c680e-bcdd-4fe4-8d2a-2d3d4d7c1234</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>Kiener + Wittlin AG</ProviderName>
  <DefaultLocale>de-CH</DefaultLocale>

  <DisplayName DefaultValue="Support Ticket"/>
  <Description DefaultValue="Erstellt eine neue E-Mail an support@kiener-wittlin.ch oder leitet eine Mail weiter."/>

  <!-- Icons im Add-Ins-Dialog -->
  <IconUrl DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/icon80.png"/>

  <SupportUrl DefaultValue="https://www.kiener-wittlin.ch/"/>

  <AppDomains>
    <AppDomain>https://raw.githubusercontent.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <!-- VersionOverrides fÃ¼r Commands/Ribbon -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                      xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.13">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>

            <!-- Function-File -->
            <FunctionFile resid="functionFile"/>

            <!-- BUTTON IM "MELDEN" RIBBON BEIM LESEN EINER MAIL -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="supportTicketGroup">
                  <Label resid="groupLabel"/>
                  
                  <!-- Button: An Support weiterleiten -->
                  <Control xsi:type="Button" id="supportForwardButton">
                    <Label resid="forwardButtonLabel"/>
                    <Supertip>
                      <Title resid="forwardButtonLabel"/>
                      <Description resid="forwardButtonDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>forwardToSupport</FunctionName>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- BUTTON IM "MELDEN" RIBBON BEIM SCHREIBEN EINER MAIL -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="supportTicketComposeGroup">
                  <Label resid="groupLabel"/>
                  
                  <!-- Button: Neues Ticket erstellen -->
                  <Control xsi:type="Button" id="supportCreateButton">
                    <Label resid="createButtonLabel"/>
                    <Supertip>
                      <Title resid="createButtonLabel"/>
                      <Description resid="createButtonDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>createTicket</FunctionName>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <!-- Ressourcen -->
      <Resources>
        <bt:Images>
          <bt:Image id="icon16"
                    DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/icon16.png"/>
          <bt:Image id="icon32"
                    DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/icon32.png"/>
          <bt:Image id="icon80"
                    DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/icon80.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="functionFile"
                  DefaultValue="https://raw.githubusercontent.com/hotlinekw/addin-icons/main/commands.html"/>
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="Support"/>
          <bt:String id="createButtonLabel" DefaultValue="Ticket erstellen"/>
          <bt:String id="forwardButtonLabel" DefaultValue="An Support weiterleiten"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="createButtonDescription"
                     DefaultValue="Erstellt eine neue E-Mail an support@kiener-wittlin.ch"/>
          <bt:String id="forwardButtonDescription"
                     DefaultValue="Leitet die aktuelle Mail an support@kiener-wittlin.ch weiter"/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>
